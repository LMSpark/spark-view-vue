{
  "dslVersion": "1.0",
  "pages": [
    {
      "id": "home",
      "title": "首页",
      "path": "/",
      "rule": [
        {
          "type": "fc-container",
          "props": { "class": "page-home" },
          "children": [
            {
              "type": "fc-hero",
              "props": { "style": { "textAlign": "center", "padding": "60px 20px" } },
              "children": [
                {
                  "type": "h1",
                  "props": { "innerHTML": "欢迎使用 {{ data.appName }}" }
                },
                {
                  "type": "p",
                  "props": { "innerHTML": "这是一个SSR首屏 + SPA导航的混合架构示例" }
                },
                {
                  "type": "ElButton",
                  "props": { "type": "primary", "innerHTML": "了解更多", "onClick": "goToAbout" }
                }
              ]
            }
          ]
        }
      ],
      "option": { "submitBtn": false }
    },
    {
      "id": "about",
      "title": "关于",
      "path": "/about",
      "rule": [
        {
          "type": "fc-container",
          "props": { "class": "page-about" },
          "children": [
            {
              "type": "h1",
              "props": { "innerHTML": "关于 {{ data.appName }}" }
            },
            {
              "type": "p",
              "props": { "innerHTML": "版本: {{ data.version }}" }
            },
            {
              "type": "ElButton",
              "props": { "innerHTML": "返回首页", "onClick": "goToHome" }
            }
          ]
        }
      ],
      "option": { "submitBtn": false }
    }
  ],
  "routes": [
    {
      "path": "/",
      "name": "home",
      "pageId": "home",
      "meta": { "title": "首页" }
    },
    {
      "path": "/about",
      "name": "about",
      "pageId": "about",
      "meta": { "title": "关于" }
    }
  ],
  "data": {
    "appName": "SPARK VIEW",
    "version": "1.0.0"
  }
}
