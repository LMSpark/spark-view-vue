{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://spark-view.dev/schemas/dsl/v1.0.json",
  "title": "SPARK.View DSL Schema",
  "description": "Schema for SPARK.View DSL version 1.0 - based on form-create rule format",
  "type": "object",
  "required": ["dslVersion"],
  "properties": {
    "dslVersion": {
      "type": "string",
      "const": "1.0",
      "description": "DSL version identifier"
    },
    "pages": {
      "type": "array",
      "description": "Multiple pages configuration",
      "items": {
        "type": "object",
        "required": ["id", "title", "rule"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+$",
            "description": "Unique page identifier"
          },
          "title": {
            "type": "string",
            "description": "Page title"
          },
          "path": {
            "type": "string",
            "description": "Route path for this page"
          },
          "meta": {
            "type": "object",
            "properties": {
              "description": { "type": "string" },
              "keywords": { "type": "array", "items": { "type": "string" } },
              "author": { "type": "string" }
            }
          },
          "rule": {
            "type": "array",
            "description": "form-create rule array for page content",
            "items": { "$ref": "#/definitions/FormCreateRule" }
          },
          "option": {
            "type": "object",
            "description": "form-create option configuration",
            "additionalProperties": true
          }
        }
      }
    },
    "page": {
      "type": "object",
      "description": "Single page mode (backward compatible)",
      "required": ["id", "title", "rule"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "description": "Unique page identifier"
        },
        "title": {
          "type": "string",
          "description": "Page title"
        },
        "meta": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "keywords": { "type": "array", "items": { "type": "string" } },
            "author": { "type": "string" }
          }
        },
        "rule": {
          "type": "array",
          "description": "form-create rule array for page content",
          "items": { "$ref": "#/definitions/FormCreateRule" }
        },
        "option": {
          "type": "object",
          "description": "form-create option configuration",
          "additionalProperties": true
        }
      }
    },
    "routes": {
      "type": "array",
      "description": "Route configurations for multi-page apps",
      "items": {
        "type": "object",
        "required": ["path", "pageId"],
        "properties": {
          "path": { "type": "string" },
          "name": { "type": "string" },
          "pageId": { "type": "string" },
          "meta": { "type": "object", "additionalProperties": true }
        }
      }
    },
    "data": {
      "type": "object",
      "description": "Page-level data context",
      "additionalProperties": true
    },
    "env": {
      "type": "object",
      "description": "Environment variables accessible in expressions",
      "additionalProperties": { "type": "string" }
    },
    "theme": {
      "type": "object",
      "description": "Theme configuration",
      "properties": {
        "colors": { "type": "object", "additionalProperties": { "type": "string" } },
        "fonts": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    }
  },
  "definitions": {
    "FormCreateRule": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "description": "Component type (form-create component or custom component)"
        },
        "field": {
          "type": "string",
          "description": "Field name for form controls"
        },
        "title": {
          "type": "string",
          "description": "Field label"
        },
        "value": {
          "description": "Default value"
        },
        "props": {
          "type": "object",
          "description": "Component properties (including innerHTML for HTML elements)",
          "additionalProperties": true
        },
        "children": {
          "oneOf": [
            {
              "type": "array",
              "description": "Child rules for container components",
              "items": { "$ref": "#/definitions/FormCreateRule" }
            },
            {
              "type": "array",
              "description": "Text content array (for compatibility)",
              "items": { "type": "string" }
            }
          ]
        },
        "validate": {
          "type": "array",
          "description": "Validation rules",
          "items": { "type": "object" }
        },
        "options": {
          "type": "array",
          "description": "Options for select/radio/checkbox",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "value": {}
            }
          }
        },
        "hidden": {
          "type": "boolean",
          "description": "Hide the field"
        },
        "display": {
          "type": "boolean",
          "description": "Display the field (affects layout)"
        },
        "className": {
          "type": "string",
          "description": "CSS class name"
        },
        "col": {
          "type": "object",
          "description": "Grid column configuration",
          "properties": {
            "span": { "type": "number" },
            "offset": { "type": "number" }
          }
        }
      },
      "additionalProperties": true
    }
  }
}
