{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://spark-view.dev/schemas/dsl/v1.0.json",
  "title": "SPARK.View DSL Schema",
  "description": "Schema for SPARK.View DSL version 1.0 - defines page structure, components, and hydration strategies",
  "type": "object",
  "required": ["dslVersion", "page"],
  "properties": {
    "dslVersion": {
      "type": "string",
      "const": "1.0",
      "description": "DSL version identifier"
    },
    "page": {
      "type": "object",
      "required": ["id", "title", "layout"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "description": "Unique page identifier"
        },
        "title": {
          "type": "string",
          "description": "Page title (supports expressions)"
        },
        "meta": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "keywords": { "type": "array", "items": { "type": "string" } },
            "author": { "type": "string" }
          }
        },
        "layout": {
          "$ref": "#/definitions/Component"
        }
      }
    },
    "data": {
      "type": "object",
      "description": "Page-level data context",
      "additionalProperties": true
    },
    "env": {
      "type": "object",
      "description": "Environment variables accessible in expressions",
      "additionalProperties": { "type": "string" }
    },
    "theme": {
      "type": "object",
      "description": "Theme configuration",
      "properties": {
        "colors": { "type": "object", "additionalProperties": { "type": "string" } },
        "fonts": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    }
  },
  "definitions": {
    "Component": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "container",
            "header",
            "footer",
            "section",
            "text",
            "button",
            "image",
            "link",
            "list",
            "grid",
            "flex",
            "form",
            "input",
            "select"
          ],
          "description": "Component type identifier"
        },
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "description": "Optional component identifier"
        },
        "props": {
          "type": "object",
          "description": "Component properties (supports expressions)",
          "additionalProperties": true
        },
        "children": {
          "type": "array",
          "items": {
            "oneOf": [
              { "$ref": "#/definitions/Component" },
              { "type": "string", "description": "Text content" }
            ]
          },
          "description": "Child components or text nodes"
        },
        "condition": {
          "type": "string",
          "description": "Conditional rendering expression (e.g., data.showBanner)"
        },
        "loop": {
          "type": "object",
          "required": ["items", "itemVar"],
          "properties": {
            "items": {
              "type": "string",
              "description": "Expression evaluating to array (e.g., data.products)"
            },
            "itemVar": {
              "type": "string",
              "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
              "description": "Variable name for loop item"
            },
            "indexVar": {
              "type": "string",
              "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
              "description": "Variable name for loop index"
            }
          },
          "description": "Loop rendering configuration"
        },
        "hydration": {
          "$ref": "#/definitions/HydrationStrategy"
        }
      }
    },
    "HydrationStrategy": {
      "type": "object",
      "description": "Client-side hydration configuration",
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["immediate", "idle", "visible", "interaction", "never"],
          "default": "immediate",
          "description": "When to hydrate this component"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "normal", "low"],
          "default": "normal",
          "description": "Hydration priority level"
        },
        "trigger": {
          "type": "string",
          "description": "Custom trigger selector (for interaction strategy)"
        },
        "viewport": {
          "type": "object",
          "properties": {
            "rootMargin": { "type": "string", "default": "0px" },
            "threshold": { "type": "number", "minimum": 0, "maximum": 1, "default": 0 }
          },
          "description": "IntersectionObserver options (for visible strategy)"
        }
      }
    },
    "Expression": {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$",
      "description": "Template expression (e.g., {{ data.title }}, {{ formatDate(data.createdAt) }})"
    }
  }
}
